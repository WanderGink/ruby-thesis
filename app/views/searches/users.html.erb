<div class="row post-managers" id="search">
  <div class="col-md-11 col-md-offset-1">
    <div class="post-list white-bg row">
      <div class="col-md-4">
        <%= text_field_tag :name, nil, placeholder: t("search.placeholder.name"), class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= select_tag :job_type_ids, options_for_select(
          JobType.all.map{|u| [u.name, u.id]}), {id: "job-type-post",
          multiple: true, include_blank: t("search.placeholder.job_type")} %>
      </div>
      <div class="col-md-4">
        <%= select_tag :location, options_for_select(["Cambodia", "Vietnam", "Thailand"]),
          {id: "location", include_blank: t("search.placeholder.location")} %>
      </div>
    </div>
    <hr>
    <div class="user-result row">
      <%= render "searches/users" %>
    </div>
    <div class="user-search-paginate row">
      <%= link_to "Load more", "javascript:void(0)", class: "btn-load-more" %>
      <span class="search-user-spinner" hidden>
        <i class="fa fa-circle-o-notch fa-spin fa-fw"></i>
        <span class="sr-only">Loading...</span>
      </span>
    </div>
  </div>
</div>
