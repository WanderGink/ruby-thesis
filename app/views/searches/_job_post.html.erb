<div class="new-feeds white-bg">
  <div class="post-content">
    <div class="job-post">
      <div class="job-title">
        <%= link_to job_post.name, job_post.post.activity %>
      </div>
      <div class="job-type">
        <% job_post.job_types.each do |job_type| %>
          <span class="badge"><%= job_type.name %></span>
        <% end %>
      </div>
      <div class="job-location">
        <i class="fa fa-map-marker" aria-hidden="true"></i> &nbsp;
        <%= job_post.country_name %>
      </div>
      <div class="salary">
        <i class="fa fa-usd" aria-hidden="true"></i> &nbsp;
        <%= salary_range job_post %>
      </div>
    </div>
  </div>
</div>
