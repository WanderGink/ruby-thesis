<div class="button clearfix">
  <div class="fileinput fileinput-new pull-left" data-provides="fileinput">
    <div class="actions">
      <span class="btn btn-default btn-file pull-left">
        <span class="fileinput-new">
          <%= t "posts.upload_photo" %>
        </span>
        <span class="fileinput-exists">
          <%= t "posts.change_photo" %>
        </span>
        <%= ff.file_field :image %>
      </span>
      <a href="#" class="btn btn-danger pull-left fileinput-exists btn-remove" data-dismiss="fileinput">
        <%= t "posts.remove_photo" %>
      </a>
    </div>
    <div class="images">
      <% if ff.object.image? %>
        <div class="fileinput-new thumbnail">
          <%= image_tag ff.object.image_url, class: "img-responsive" %>
        </div>
      <% end %>
      <div class="fileinput-preview fileinput-exists thumbnail"></div>
    </div>
  </div>

  <div class="pull-right">
    <span class="pull-left">
      <%= ff.fields_for :activity do |fff| %>
        <%= fff.hidden_field :user_id, value: current_user.id %>
        <%= fff.select :status, options_for_select(Activity.statuses.keys
          .collect{|status| [t("post_statuses.#{status}"), status]}, fff.object.status),
          {}, {class: "form-control btn-status"} %>
        <% end %>
    </span>
    <span>
      <%= ff.submit ff.object.new_record? ? t("actions.post") : t("actions.save"),
        class: "btn btn-primary pull-right" %>
    </span>
  </div>
</div>
