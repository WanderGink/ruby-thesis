<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t("site"), set_root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to t("layouts.labels.home"), set_root_path %></li>
          <% unless current_user.admin? %>
            <li><%= link_to t("layouts.labels.search_users"), searches_users_path %></li>
            <li><%= link_to t("layouts.labels.search_jobs"), searches_jobs_path %></li>
            <li>
              <%= link_to conversations_path, class: "icon-chat" do %>
                <i class="fa fa-comment ico-chat" aria-hidden="true"></i>
                <span class="badge chat-badge"><%= Conversation.unread_conversation current_user.id %></span>
              <% end %>
            </li>
          <% end %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle dropdown-global",
              data: {toggle: "dropdown"} do %>
              <i class="fa fa-globe ico-global" aria-hidden="true"></i>
              <span class="badge notification-badge"><%= current_user
                .received_notifications.unseen_notification %></span>
            <% end %>

            <ul class="dropdown-menu dropdown-notification">
              <div class="notification-header">
                <span><strong><%= t "notifications.notifications" %></strong></span>
              </div>
              <div class="notification-content">
                <%= render partial: "shared/user_notification",
                  collection: current_user.received_notifications
                    .load_notifications.limit(Settings.notifications.limit_show),
                  as: :user_notification %>
              </div>
              <div class="notification-footer">
                <span><strong><%= link_to t("notifications.see_all"),
                  notifications_path %></strong></span>
              </div>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle dropdown-avatar" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <%= image_tag current_user.avatar_url, size: Settings.images.sizes.xsmall_avatar, class: "img-circle" %>
            <%= current_user.name %>
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.labels.profile"), profiles_path %></li>
              <li><%= link_to t("layouts.labels.edit_password"), passwords_path %></li>
              <li><%= link_to t("devise.labels.log_out"),
                destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("devise.labels.sign_in"), new_user_session_path %></li>
          <li><%= link_to t("devise.labels.sign_up"), new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
