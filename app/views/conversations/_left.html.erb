<div class="left">
  <div class="top">
    <input type="text" />
    <%= link_to "", "", class: "new-conversation",
      data: {toggle: "modal", target: "#new-conversation-modal"} %>
  </div>
    <ul class="people">
      <% conversations.each do |conversation| %>
        <%= render "conversations/conversation", conversation: conversation,
          active_conversation: @conversation,
          conversation_name: conversation.conversation_partner(current_user).name %>
      <% end %>
    </ul>
</div>
