<% if params[:page] %>
  $(".chat").prepend("<%= j render 'conversations/messages', messages: @messages %>");
  $(".message-loading").hide();
  <% if @messages.next_page %>
    $(".message-paginate").html("<%= j render_pagination @messages %>")
  <% else %>
    $(".message-paginate").remove();
  <% end %>
<% else %>
  $(".right-conversation").html("<%= j render 'conversations/right', conversation: @conversation, conversation_partner: @conversation.conversation_partner(current_user), messages: @messages %>")
  set_chat_slimscroll();
  $(".loading-spin").hide();
<% end %>
