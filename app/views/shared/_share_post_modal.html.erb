<%= form_for share_post, remote: true do |f| %>
  <div class="modal fade" id="share-post-confirm-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-content" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"><%= t "new_feeds.labels.share_post" %></h4>
        </div>
        <div class="modal-body">
          <%= f.hidden_field :post_id, value: post.id %>
          <%= f.text_area :content, class: "form-control" %>
          <%= render "shared/share_post_content", post: post %>
        </div>
        <div class="modal-footer">
          <div class="pull-right">
            <span class="pull-left">
              <%= f.fields_for :activity do |ff| %>
                <%= ff.hidden_field :user_id, value: current_user.id %>
                <%= ff.select :status, options_for_select(Activity.statuses.keys
                  .collect{|status| [t("post_statuses.#{status}"), status]},
                  ff.object.status), {}, {class: "form-control btn-status"} %>
              <% end %>
            </span>
            <button type="button" class="btn btn-default" data-dismiss="modal">
              <%= t "actions.close" %>
            </button>
            <span>
              <%= f.submit f.object.new_record? ? t("actions.post") : t("actions.save"),
                class: "btn btn-primary pull-right" %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
