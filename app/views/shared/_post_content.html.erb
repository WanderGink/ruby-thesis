<div class="post-content">
  <% if (job_post = post.job_post).present? %>
    <div class="job-post">
      <div class="job-title">
        <%= job_post.name %>
      </div>
      <div class="job-type">
        <% job_post.job_types.each do |job_type| %>
          <span class="badge"><%= job_type.name %></span>
        <% end %>
      </div>
      <div class="job-location">
        <i class="fa fa-map-marker" aria-hidden="true"></i> &nbsp;
        <%= job_post.country_name %>
      </div>
      <div class="salary">
        <i class="fa fa-usd" aria-hidden="true"></i> &nbsp;
        <%= salary_range job_post %>
      </div>
    </div>
  <% end %>
  <div class="post-article">
    <%= post.content.html_safe if post.content %>
  </div>
  <div class="post-image">
    <%= image_tag post.image_url, class: "img-responsive" if post.image_url %>
  </div>
</div>
